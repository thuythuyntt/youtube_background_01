<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:paddingBottom="@dimen/dp_8">

    <FrameLayout
        android:id="@+id/frame_image_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_video"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop"
            app:srcCompat="@android:color/background_dark" />

        <com.youtu.sleep.youtubebackground.widget.textviews.TextViewContentCustom
            android:id="@+id/text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginEnd="@dimen/dp_4"
            android:textColor="@android:color/background_light"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@+id/frame_image_video"
        android:gravity="center"
        android:orientation="vertical">

        <com.youtu.sleep.youtubebackground.widget.textviews.TextViewContentCustom
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_14" />

        <com.youtu.sleep.youtubebackground.widget.textviews.TextViewContentCustom
            android:id="@+id/text_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_12" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.youtu.sleep.youtubebackground.widget.textviews.TextViewContentCustom
                android:id="@+id/text_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/image_favourite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favourite_unable"
                android:layout_marginLeft="@dimen/dp_8"/>
        </TableRow>
    </LinearLayout>
</RelativeLayout>
